{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Preview in Quarto (using Docker)",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/.docker/"
            },
            "command": "sh preview.sh",
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Build Docker containers",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/.docker/"
            },
            "command": "sh build.sh", 
            "group": {
                "kind": "build"
            }
        }
    ]
}